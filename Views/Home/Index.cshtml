@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
    <link rel="icon" type="image/png" sizes="32x32" href="/Img/Curso.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Usuario.css" asp-append-version="true" />
    <title>Inicio</title>
    <style>
        .role-btn { padding: 12px 16px; font-weight: 600; border-radius: 8px; }
        .role-grid { display: grid; grid-template-columns: repeat(2, minmax(180px, 1fr)); gap: 12px; }
        @@media (max-width: 576px){ .role-grid { grid-template-columns: 1fr; } }
        .app-icon { width: 72px; height: 72px; }
    </style>
    </head>

<body>
    <div class="container">
        <div class="title">Bienvenido Campus Virtual GRLL</div>
        <div class="text-center mb-3">
            <img src="/Img/Curso.png" alt="Logo" class="app-icon" />
            <p class="text-muted mt-2">Seleccione su rol para iniciar sesión</p>
        </div>
        <div class="role-grid">
            <a class="btn btn-primary role-btn" href="@Url.Action("Index","Login", new { rol = "Administrador" })">Administrador</a>
            <a class="btn btn-info role-btn" href="@Url.Action("Index","Login", new { rol = "Profesor" })">Profesor</a>
            <a class="btn btn-success role-btn" href="@Url.Action("Index","Login", new { rol = "Practicante" })">Practicante</a>
            <a class="btn btn-warning role-btn" href="@Url.Action("Index","Login", new { rol = "Colaborador" })">Colaborador</a>
        </div>
        <div class="mt-3 text-center">
            <small class="text-muted">Si ingresas al login de un rol distinto al tuyo, el acceso será bloqueado.</small>
        </div>
    </div>
</body>
</html>
