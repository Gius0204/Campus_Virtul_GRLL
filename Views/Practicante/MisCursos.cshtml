@model IEnumerable<Campus_Virtul_GRLL.Models.ViewModels.CursoVm>
@{
    ViewData["Title"] = "Mis Cursos";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="container-fluid">
    <h1 class="page-title mb-3">Mis Cursos</h1>
    <div class="row">
    @foreach (var curso in Model)
    {
        <div class="col-md-4">
            <div class="content-card mb-3">
                <h5>@curso.Titulo</h5>
                <p class="small text-muted">@curso.Descripcion</p>
                <a class="btn btn-primary btn-sm" href="@Url.Action("Detalle", "Practicante", new { id = curso.Id })">Entrar</a>
            </div>
        </div>
    }
    </div>
</div>
