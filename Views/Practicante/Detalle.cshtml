@model Campus_Virtul_GRLL.Models.Modulo
@{
    ViewData["Title"] = Model.Titulo;
    // No hay sesiones/subsecciones modeladas aquí; vista de solo lectura del módulo
}

<h2>@Model.Titulo</h2>
<p>@Model.Descripcion</p>

<div class="card mt-3">
    <div class="card-body">
        <h5>Información del módulo</h5>
        <ul class="list-unstyled">
            <li><strong>Título:</strong> @Model.Titulo</li>
            <li><strong>Descripción:</strong> @Model.Descripcion</li>
            <li><strong>Estado:</strong> @Model.Estado</li>
        </ul>
    </div>
</div>
