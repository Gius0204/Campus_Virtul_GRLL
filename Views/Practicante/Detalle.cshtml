@model Campus_Virtul_GRLL.Models.ViewModels.CursoPlayerVm
@{
    ViewData["Title"] = Model.Titulo;
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-4 col-xl-3">
            <div class="content-card" style="max-height: calc(100vh - 140px); overflow:auto;">
                <h5 class="mb-3">Sesiones</h5>
                <div class="accordion" id="sesionesAccordion">
                    @for (int i = 0; i < Model.Sesiones.Count; i++)
                    {
                        var s = Model.Sesiones[i];
                        var expanded = i == 0 ? "show" : string.Empty;
                        var headingId = $"heading-{s.Id}";
                        var collapseId = $"collapse-{s.Id}";
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="@headingId">
                                <button class="accordion-button @(i==0 ? null : "collapsed")" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId">
                                    @(i+1) - @s.Titulo
                                </button>
                            </h2>
                            <div id="@collapseId" class="accordion-collapse collapse @expanded" data-bs-parent="#sesionesAccordion">
                                <div class="accordion-body p-0">
                                    <table class="table table-sm mb-0" style="table-layout: fixed;">
                                        <thead class="table-light">
                                            <tr><th class="ps-3" style="width:65%">Título</th><th style="width:20%">Tipo</th><th class="text-end pe-3" style="width:15%">&nbsp;</th></tr>
                                        </thead>
                                        <tbody>
                                        @foreach (var sub in s.Subsecciones)
                                        {
                                            var isSelected = Model.Seleccionada != null && Model.Seleccionada.Id == sub.Id;
                                            <tr class="@(isSelected ? "table-primary" : null)">
                                                <td class="ps-3 text-truncate"><a class="text-decoration-none" href="@Url.Action("Detalle","Practicante", new { id = Model.CursoId, subId = sub.Id })">@sub.Titulo</a></td>
                                                <td><span class="badge bg-secondary text-capitalize">@sub.Tipo</span></td>
                                                <td class="text-end pe-3">
                                                    @if (sub.Tipo == "tarea" && sub.FechaLimite.HasValue)
                                                    {
                                                        <span class="badge rounded-pill text-bg-warning">Vence @sub.FechaLimite.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-8 col-xl-9">
            <div class="content-card" style="min-height: 60vh;">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h4 class="m-0">@Model.Seleccionada?.Titulo</h4>
                    <div class="text-muted small">@Model.Titulo</div>
                </div>

                @{
                    // Calcular anterior/siguiente entre subsecciones publicadas
                    var flat = Model.Sesiones.OrderBy(x => x.Orden).SelectMany(x => x.Subsecciones.OrderBy(z => z.Orden)).ToList();
                    var idx = Model.Seleccionada != null ? flat.FindIndex(f => f.Id == Model.Seleccionada.Id) : -1;
                    var prev = idx > 0 ? flat[idx - 1] : null;
                    var next = idx >= 0 && idx < flat.Count - 1 ? flat[idx + 1] : null;
                }
                <div class="d-flex justify-content-between mb-3">
                    <a class="btn btn-outline-secondary btn-sm @(prev == null ? "disabled" : null)" href="@(prev == null ? "#" : Url.Action("Detalle","Practicante", new { id = Model.CursoId, subId = prev.Id }))">← Anterior</a>
                    <a class="btn btn-outline-secondary btn-sm @(next == null ? "disabled" : null)" href="@(next == null ? "#" : Url.Action("Detalle","Practicante", new { id = Model.CursoId, subId = next.Id }))">Siguiente →</a>
                </div>

                @if (Model.Seleccionada == null)
                {
                    <div class="alert alert-info">Este curso aún no tiene subsecciones publicadas.</div>
                }
                else if (Model.Seleccionada.Tipo == "contenido" || Model.Seleccionada.Tipo == "tarea")
                {
                    if (!string.IsNullOrWhiteSpace(Model.Seleccionada.Texto))
                    {
                        <div class="mb-3">
                            <div class="small text-muted mb-1">Contenido</div>
                            <div>@Html.Raw(Html.Encode(Model.Seleccionada.Texto).Replace("\n", "<br/>").Replace("  ", "&nbsp;&nbsp;"))</div>
                        </div>
                    }
                    if (!string.IsNullOrWhiteSpace(Model.Seleccionada.ArchivoUrlSigned))
                    {
                        var previewId = $"preview-{Model.Seleccionada.Id}";
                        <div class="mb-3">
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="small text-muted">Archivo</div>
                                <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="collapse" data-bs-target="#@previewId">Mostrar/Ocultar vista previa</button>
                            </div>
                            <div id="@previewId" class="collapse show mt-2">
                                @if ((Model.Seleccionada.ArchivoMime ?? string.Empty).StartsWith("application/pdf", StringComparison.OrdinalIgnoreCase) || (Model.Seleccionada.ArchivoUrlSigned?.ToLowerInvariant().EndsWith(".pdf") ?? false))
                                {
                                    <div class="ratio" style="--bs-aspect-ratio: 140%;">
                                        <iframe src="@Model.Seleccionada.ArchivoUrlSigned#toolbar=1&navpanes=0" style="width:100%; height:100%; border:0;"></iframe>
                                    </div>
                                }
                                else
                                {
                                    <a class="btn btn-outline-primary" target="_blank" href="@Model.Seleccionada.ArchivoUrlSigned">Descargar</a>
                                }
                            </div>
                            <div class="text-muted small mt-1">@Model.Seleccionada.ArchivoMime · @(Model.Seleccionada.ArchivoSize ?? 0) bytes</div>
                        </div>
                    }
                    if (Model.Seleccionada.Tipo == "tarea")
                    {
                        var vencida = Model.Seleccionada.FechaLimite.HasValue && DateTimeOffset.Now > Model.Seleccionada.FechaLimite.Value.ToLocalTime();
                        var calificada = string.Equals(Model.Seleccionada.EntregaEstado, "calificado", StringComparison.OrdinalIgnoreCase);
                        <div class="content-card mb-3">
                            <div class="d-flex align-items-center justify-content-between mb-2">
                                <div>
                                    <strong>Tarea</strong>
                                    @if (Model.Seleccionada.FechaLimite.HasValue)
                                    {
                                        <span class="ms-2">Fecha límite: @Model.Seleccionada.FechaLimite.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</span>
                                    }
                                    @if (Model.Seleccionada.MaxPuntaje.HasValue)
                                    {
                                        <span class="ms-2">Puntaje máximo: @Model.Seleccionada.MaxPuntaje</span>
                                    }
                                </div>
                                <div class="text-end">
                                    @if (calificada && Model.Seleccionada.EntregaCalificacion.HasValue)
                                    {
                                        <div class="display-6 fw-bold mb-0">@Model.Seleccionada.EntregaCalificacion</div>
                                        <div class="small text-muted">Calificación</div>
                                    }
                                    else if (!string.IsNullOrWhiteSpace(Model.Seleccionada.EntregaEstado))
                                    {
                                        <span class="badge rounded-pill text-bg-info">@Model.Seleccionada.EntregaEstado</span>
                                    }
                                    else if (vencida)
                                    {
                                        <span class="badge rounded-pill text-bg-warning">Vencida</span>
                                    }
                                    else
                                    {
                                        <span class="badge rounded-pill text-bg-secondary">No entregada</span>
                                    }
                                </div>
                            </div>

                            @if (!string.IsNullOrWhiteSpace(Model.Seleccionada.EntregaArchivoUrlSigned))
                            {
                                var entregaPreviewId = $"entrega-{Model.Seleccionada.Id}";
                                <div class="mb-3">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div class="small text-muted mb-1">Tu archivo entregado</div>
                                        <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="collapse" data-bs-target="#@entregaPreviewId">Mostrar/Ocultar vista previa</button>
                                    </div>
                                    <div id="@entregaPreviewId" class="collapse show mt-2">
                                        <a class="btn btn-outline-primary btn-sm" target="_blank" href="@Model.Seleccionada.EntregaArchivoUrlSigned">Abrir</a>
                                    </div>
                                </div>
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.Seleccionada.EntregaEnlaceUrl))
                            {
                                <div class="mb-3">
                                    <div class="small text-muted mb-1">Tu enlace entregado</div>
                                    <a class="btn btn-outline-primary btn-sm" target="_blank" href="@Model.Seleccionada.EntregaEnlaceUrl">Abrir</a>
                                </div>
                            }

                            <form method="post" enctype="multipart/form-data" action="@Url.Action("Entregar","Practicante")" class="row g-2">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="cursoId" value="@Model.CursoId" />
                                <input type="hidden" name="subseccionId" value="@Model.Seleccionada.Id" />
                                <div class="col-md-6">
                                    <label class="form-label small">Archivo PDF</label>
                                    <input type="file" name="archivo" accept="application/pdf" class="form-control form-control-sm" @(calificada || vencida ? "disabled" : null) />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label small">O enlace externo</label>
                                    <input type="url" name="enlace" placeholder="https://..." class="form-control form-control-sm" @(calificada || vencida ? "disabled" : null) />
                                </div>
                                <div class="col-12 d-flex justify-content-end">
                                    <button type="submit" class="btn btn-primary btn-sm" @(calificada || vencida ? "disabled" : null)>Enviar/Actualizar entrega</button>
                                </div>
                            </form>
                            @if (calificada)
                            {
                                <div class="text-muted small mt-2">La entrega está calificada y ya no puede modificarse.</div>
                            }
                            else if (vencida)
                            {
                                <div class="text-muted small mt-2">La fecha límite venció; no se permiten nuevas entregas.</div>
                            }
                        </div>
                    }
                }
                else if (Model.Seleccionada.Tipo == "video")
                {
                    if (!string.IsNullOrWhiteSpace(Model.Seleccionada.VideoUrlSigned))
                    {
                        <div class="ratio ratio-16x9 mb-3">
                            <video src="@Model.Seleccionada.VideoUrlSigned" controls preload="metadata"></video>
                        </div>
                        <div class="text-muted small">@Model.Seleccionada.VideoMime · Tamaño: @(Model.Seleccionada.VideoSize ?? 0) bytes · Duración aprox: @(Model.Seleccionada.VideoDuracion ?? 0) s</div>
                    }
                    else
                    {
                        <div class="alert alert-warning">Video no disponible.</div>
                    }
                    if (!string.IsNullOrWhiteSpace(Model.Seleccionada.Texto))
                    {
                        <div class="content-card mt-3">
                            <div class="small text-muted mb-1">Notas</div>
                            <div>@Html.Raw(Html.Encode(Model.Seleccionada.Texto).Replace("\n", "<br/>").Replace("  ", "&nbsp;&nbsp;"))</div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
