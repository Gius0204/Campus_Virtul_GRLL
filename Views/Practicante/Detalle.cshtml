@model Campus_Virtul_GRLL.Models.ViewModels.CursoVm
@{
    ViewData["Title"] = Model.Titulo;
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="container-fluid">
    <h1 class="page-title mb-2">@Model.Titulo</h1>
    <div class="content-card">
        <h5>Información del curso</h5>
        <p class="small text-muted">@Model.Descripcion</p>
        <ul class="list-unstyled">
            <li><strong>Título:</strong> @Model.Titulo</li>
            <li><strong>Descripción:</strong> @Model.Descripcion</li>
            <li><strong>Estado:</strong> @Model.Estado</li>
        </ul>
    </div>
</div>
