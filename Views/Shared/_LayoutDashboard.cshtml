@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
    <link rel="icon" type="image/png" sizes="32x32" href="/Img/Curso.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Dashboard.css" asp-append-version="true" />
    <title>@ViewData["Title"] - Campus Virtual GRLL</title>
</head>

<body class="app sidebar-mini">
    <!-- Header -->
    <header class="dashboard-header">
        <div class="header-left">
            <div class="dashboard-logo">Campus Virtual GRLL</div>
            <!-- Botón toggle del menú -->
            <button class="menu-toggle-btn" id="menuToggleBtn" aria-label="Toggle menu">
                ☰
            </button>
        </div>

        <div class="header-right">

            <!-- Perfil de usuario -->
            <a class="header-icon-btn" aria-label="Perfil de usuario" href="@Url.Action("Index","Perfil")" title="Mi Perfil">
                👤
            </a>
        </div>
    </header>

    <!-- Sidebar -->
    <div class="sidebar">
        <div class="user-profile">
            <div class="user-avatar">
                <img src="/Img/icono_hombre.png" alt="Avatar" onerror="this.src='https://via.placeholder.com/50'">
            </div>
            <div class="user-info">
                <h3>@(User.Identity?.Name ?? "Usuario")</h3>
                <p>@(User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "Administrador")</p>
            </div>
        </div>

        <nav class="sidebar-menu">
            @{ var rol = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "Practicante"; }
            <ul>
                <li class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")">
                    <a href="@Url.Action("Index", "Dashboard")">
                        <span class="icon">🎨</span>
                        <span>Dashboard</span>
                    </a>
                </li>
                @* Catálogo Cursos (submenu) para Administrador - usando Bootstrap Collapse *@
                @if (rol == "Administrador") {
                    <li>
                        <a href="#submenuCatalogo" class="submenu-toggle" data-bs-toggle="collapse" role="button" aria-expanded="false" aria-controls="submenuCatalogo">
                            <span class="icon">📚</span><span>Catálogo Cursos</span>
                        </a>
                        <ul id="submenuCatalogo" class="submenu collapse">
                            <li><a href="@Url.Action("Index","Cursos")">Detalle de Cursos</a></li>
                            <li><a href="@Url.Action("ListadoCursos","Administrador")">Listado de Cursos</a></li>
                        </ul>
                    </li>
                }
                @* Mis Cursos (submenu) para Profesor - Collapse *@
                @if (rol == "Profesor") {
                    <li>
                        <a href="#submenuMisCursosProf" class="submenu-toggle" data-bs-toggle="collapse" role="button" aria-expanded="false" aria-controls="submenuMisCursosProf">
                            <span class="icon">🎓</span><span>Mis Cursos</span>
                        </a>
                        <ul id="submenuMisCursosProf" class="submenu collapse">
                            <li><a href="@Url.Action("ListadoProfesor","Cursos")">Listado de Cursos</a></li>
                            <li><a href="@Url.Action("MisCursos","Cursos")">Detalle de Cursos</a></li>
                        </ul>
                    </li>
                }
                @* Catálogo + Mis Cursos (submenu) para Practicante y Colaborador - usando Bootstrap Collapse *@
                @if (rol == "Practicante" || rol == "Colaborador") {
                    <li>
                        <a href="@Url.Action("Catalogo","Practicante")">
                            <span class="icon">📚</span><span>Catálogo Cursos</span>
                        </a>
                    </li>
                    <li>
                        <a href="#submenuMisCursosPc" class="submenu-toggle" data-bs-toggle="collapse" role="button" aria-expanded="false" aria-controls="submenuMisCursosPc">
                            <span class="icon">🎓</span><span>Mis Cursos</span>
                        </a>
                        <ul id="submenuMisCursosPc" class="submenu collapse">
                            <li><a href="@Url.Action("MisCursos", "Practicante")">Contenido</a></li>
                            <li><a href="@Url.Action("MisCursos", "Asistencias")">Asistencias</a></li>
                        </ul>
                    </li>
                }
                @* Panel de Solicitudes solo Administrador *@
                @if (rol == "Administrador") {
                    <li class="@(ViewContext.RouteData.Values["action"]?.ToString() == "PanelSolicitudes" && ViewContext.RouteData.Values["controller"]?.ToString() == "Administrador" ? "active" : "")">
                        <a href="@Url.Action("PanelSolicitudes", "Administrador")">
                            <span class="icon">📋</span>
                            <span>Solicitudes</span>
                        </a>
                    </li>
                    @* AdminCursos ocultado: Dashboard ya redirige a PanelAdministrador *@
                    <li>
                        <a href="@Url.Action("Index", "Usuarios")">
                            <span class="icon">👤</span>
                            <span>Usuarios</span>
                        </a>
                    </li>
                }
                @* Inscripciones pendientes solo Profesor *@
                @if (rol == "Profesor") {
                    <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Inscripciones" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
                        <a href="@Url.Action("Index", "Inscripciones")">
                            <span class="icon">🧾</span>
                            <span>Inscripciones Pendientes</span>
                        </a>
                    </li>
                }
                <li>
                    <a href="#" onclick="event.preventDefault(); abrirModalLogout();" style="display: block; cursor: pointer;">
                        <span class="icon">🚪</span>
                        <span>Cerrar Sesión</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    <!-- Overlay para móviles -->
    <div class="sidebar-overlay"></div>

    <!-- Área de contenido principal -->
    <div class="main-content">
        @RenderBody()
    </div>

    <!-- Toast container -->
    <div class="position-fixed top-0 end-0 p-3" style="z-index: 1080">
        <div id="appToast" class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body" id="appToastBody">Acción exitosa.</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Cerrar"></button>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/DashboardToggle.js"></script>
    <script>
        // simple submenu toggle for non-collapse menus only
        document.querySelectorAll('.submenu-toggle').forEach(function(btn){
            if (btn.dataset.bsToggle === 'collapse') return; // Bootstrap handles collapse ones
            btn.addEventListener('click', function(e){
                e.preventDefault();
                var ul = this.nextElementSibling;
                if (ul) ul.classList.toggle('open');
            });
        });
    </script>
        <!-- Modal Logout -->
        <div class="modal fade" id="logoutModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Cerrar sesión</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>¿Desea cerrar sesión como <strong>@rol</strong>?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <form asp-action="Logout" asp-controller="Login" method="post" id="logoutForm" style="margin: 0;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-primary">Sí, salir</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <script>
            function abrirModalLogout(){
                var modal = new bootstrap.Modal(document.getElementById('logoutModal'));
                modal.show();
            }
            // Mostrar toast si hay mensaje en TempData
            document.addEventListener('DOMContentLoaded', function(){
                var msg = '@(TempData["ToastSuccess"] ?? "")';
                if (msg && msg.length > 0) {
                    var bodyEl = document.getElementById('appToastBody');
                    if (bodyEl) bodyEl.textContent = msg;
                    var toastEl = document.getElementById('appToast');
                    if (toastEl) {
                        var toast = new bootstrap.Toast(toastEl, { delay: 3000 });
                        toast.show();
                    }
                }
            });
        </script>

        @await RenderSectionAsync("Scripts", required: false)
</body>
</html>