@{
    ViewData["Title"] = "Historial de Asistencias";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="content-card">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Historial de Asistencias</h5>
                    <button type="button" class="btn btn-outline-secondary" onclick="history.back()">Regresar</button>
                </div>
                <hr />
                @{ var historial = (ViewBag.Historial as IEnumerable<(DateOnly fecha, TimeOnly? horaInicio, TimeOnly? horaFin, string estado, string? justificacion)>) ?? Enumerable.Empty<(DateOnly, TimeOnly?, TimeOnly?, string, string?)>(); }
                @if (!historial.Any())
                {
                    <div class="alert alert-info">No hay registros de asistencia aún.</div>
                }
                else
                {
                    <div class="row g-3">
                        @foreach (var h in historial)
                        {
                            var inicioTxt = h.horaInicio.HasValue ? h.horaInicio.Value.ToString("HH:mm") : null;
                            var finTxt = h.horaFin.HasValue ? h.horaFin.Value.ToString("HH:mm") : null;
                            <div class="col-sm-6 col-md-4 col-lg-3">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <div class="fw-semibold"><i class="bi bi-clock me-1"></i> @h.fecha.ToString("yyyy-MM-dd")</div>
                                            <div>
                                                @switch(h.estado)
                                                {
                                                    case "presente":
                                                        <span class="badge bg-success">Asistió</span>
                                                        break;
                                                    case "tardanza":
                                                        <span class="badge bg-warning text-dark">Tardanza</span>
                                                        break;
                                                    case "justificado":
                                                        <span class="badge bg-info text-dark">Justificado</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-danger">Faltó</span>
                                                        break;
                                                }
                                            </div>
                                        </div>
                                        <div class="text-muted small">
                                            <div>Hora de entrada: @(inicioTxt ?? "-")</div>
                                            <div>Hora de salida: @(finTxt ?? "-")</div>
                                        </div>
                                        @if (!string.IsNullOrWhiteSpace(h.justificacion))
                                        {
                                            <div class="mt-2 small"><strong>Justificación:</strong> @h.justificacion</div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
    </div>
</div>
