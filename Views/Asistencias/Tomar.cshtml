@{
    ViewData["Title"] = "Tomar Asistencia";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    var participantes = (IEnumerable<(System.Guid id, string nombres, string correo, string rol)>)ViewBag.Participantes ?? Enumerable.Empty<(System.Guid, string, string, string)>();
    var fecha = (DateOnly)ViewBag.Fecha;
    var cursoId = (System.Guid)ViewBag.CursoId;
    var horarioInicio = (TimeSpan?)ViewBag.HorarioInicio;
    var horarioFin = (TimeSpan?)ViewBag.HorarioFin;
}

<div class="content-card">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h5 class="mb-0">Tomar Asistencia</h5>
        <button type="button" class="btn btn-outline-secondary" onclick="history.back()">Regresar</button>
    </div>
    <form asp-action="Registrar" asp-controller="Asistencias" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="idCurso" value="@cursoId" />
        @if (TempData["Mensaje"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Mensaje"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <div class="row mb-3">
            <div class="col-md-3">
                <label class="form-label">Fecha</label>
                <!-- Visible, no editable -->
                <input type="date" class="form-control" value="@fecha.ToString("yyyy-MM-dd")" disabled />
                <!-- Enviar valor real -->
                <input type="hidden" name="fecha" value="@fecha.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-9 d-flex align-items-end">
                @if (horarioInicio.HasValue && horarioFin.HasValue)
                {
                    <small class="text-muted">Se usará el horario del curso: @horarioInicio.Value.ToString("hh\\:mm") - @horarioFin.Value.ToString("hh\\:mm")</small>
                }
                else
                {
                    <small class="text-warning">No hay horario configurado para este día.</small>
                }
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Participante</th>
                        <th>Rol</th>
                        <th>Estado</th>
                        <th>Justificación</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in participantes)
                    {
                        <tr>
                            <td>
                                <input type="hidden" name="usuarios" value="@p.id" />
                                @p.nombres (@p.correo)
                            </td>
                            <td>@p.rol</td>
                            <td>
                                <select class="form-select form-select-sm" name="estados">
                                    <option value="presente">Presente</option>
                                    <option value="tardanza">Tardanza</option>
                                    <option value="ausente">Ausente</option>
                                    <option value="justificado">Justificado</option>
                                </select>
                            </td>
                            <td>
                                <input type="text" class="form-control form-control-sm" name="justificaciones" placeholder="opcional" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="text-end">
            <button type="submit" class="btn btn-primary">Guardar asistencia</button>
        </div>
    </form>
</div>
