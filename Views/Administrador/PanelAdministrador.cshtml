@{
    ViewData["Title"] = "Panel Administrador";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="page-title">Panel de Administrador - Gestión de Cursos</h1>
            <p class="text-muted">Bienvenido, @ViewBag.NombreCompleto</p>
        </div>
    </div>

    <!-- Información del usuario -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="content-card">
                <h5>Información del Usuario</h5>
                <hr>
                <p><strong>Nombre:</strong> @ViewBag.NombreCompleto</p>
                <p><strong>Rol:</strong> @ViewBag.Rol</p>
                <p><strong>Área:</strong> @ViewBag.Area</p>
                <p><strong>DNI:</strong> @ViewBag.DNI</p>
            </div>
        </div>

        <div class="col-md-9">
            <div class="content-card">
                <h5>Gestión de Cursos</h5>
                <hr>
                <div class="row">
                    <div class="col-md-4">
                        <div class="stat-card text-center p-3 mb-3" style="background: #3498db; color: white; border-radius: 8px;">
                            <h3>25</h3>
                            <p>Cursos Activos</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-card text-center p-3 mb-3" style="background: #2ecc71; color: white; border-radius: 8px;">
                            <h3>150</h3>
                            <p>Estudiantes</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-card text-center p-3 mb-3" style="background: #e74c3c; color: white; border-radius: 8px;">
                            <h3>12</h3>
                            <p>Profesores</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de cursos -->
    <div class="row">
        <div class="col-12">
            <div class="content-card">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5>Lista de Cursos</h5>
                    <button class="btn btn-primary" onclick="alert('Funcionalidad en desarrollo')">
                        ➕ Nuevo Curso
                    </button>
                </div>
                <hr>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Nombre del Curso</th>
                                <th>Profesor</th>
                                <th>Estudiantes</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>Programación en C#</td>
                                <td>Juan Pérez</td>
                                <td>30</td>
                                <td><span class="badge bg-success">Activo</span></td>
                                <td>
                                    <button class="btn btn-sm btn-info">Ver</button>
                                    <button class="btn btn-sm btn-warning">Editar</button>
                                    <button class="btn btn-sm btn-danger">Eliminar</button>
                                </td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>Base de Datos SQL</td>
                                <td>María García</td>
                                <td>25</td>
                                <td><span class="badge bg-success">Activo</span></td>
                                <td>
                                    <button class="btn btn-sm btn-info">Ver</button>
                                    <button class="btn btn-sm btn-warning">Editar</button>
                                    <button class="btn btn-sm btn-danger">Eliminar</button>
                                </td>
                            </tr>
                            <tr>
                                <td>3</td>
                                <td>Desarrollo Web</td>
                                <td>Carlos López</td>
                                <td>28</td>
                                <td><span class="badge bg-warning">En Progreso</span></td>
                                <td>
                                    <button class="btn btn-sm btn-info">Ver</button>
                                    <button class="btn btn-sm btn-warning">Editar</button>
                                    <button class="btn btn-sm btn-danger">Eliminar</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        console.log('Panel de Administrador cargado correctamente');
    </script>
}

