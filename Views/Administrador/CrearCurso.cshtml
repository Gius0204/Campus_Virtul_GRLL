@{
    ViewData["Title"] = "Crear Curso";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    var profesores = ViewBag.Profesores as List<Campus_Virtul_GRLL.Models.Usuario> ?? new();
}
<div class="container-fluid">
    <h1 class="page-title mb-3">Crear Curso</h1>
    @if (TempData["Mensaje"] != null){<div class="alert alert-success">@TempData["Mensaje"]</div>}
    @if (TempData["Error"] != null){<div class="alert alert-danger">@TempData["Error"]</div>}
    <div class="content-card">
        <form method="post" asp-action="CrearCurso" asp-controller="Administrador">
            @Html.AntiForgeryToken()
            <div class="mb-2">
                <label class="form-label">Título</label>
                <input name="titulo" class="form-control" />
            </div>
            <div class="mb-2">
                <label class="form-label">Descripción</label>
                <textarea name="descripcion" class="form-control"></textarea>
            </div>
            <div class="mb-2">
                <label class="form-label">Profesor</label>
                <select name="idProfesor" class="form-select">
                    @foreach (var p in profesores)
                    {
                        <option value="@p.IdUsuario">@p.Nombres @p.Apellidos (@p.CorreoElectronico)</option>
                    }
                </select>
            </div>
            <button class="btn btn-primary">Crear Curso</button>
            <a class="btn btn-secondary" href="@Url.Action("PanelAdministrador","Administrador")">Cancelar</a>
        </form>
    </div>
</div>