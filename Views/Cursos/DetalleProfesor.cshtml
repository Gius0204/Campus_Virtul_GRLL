@model dynamic
@{
    ViewData["Title"] = "Detalle del Curso";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    object? cursoObj = ViewBag.Curso;
    bool cursoDisponible = cursoObj != null;
    bool puedeEditar = (bool)(ViewBag.PuedeEditar ?? false);
}
<div class="container-fluid">
    @if (!cursoDisponible)
    {
        <div class="alert alert-danger">No se encontró el curso.</div>
        <div class="mt-3">
            <a class="btn btn-secondary" href="@Url.Action("Index","Cursos")">Volver al Catálogo</a>
        </div>
    }
    else
    {
        var c = ((Guid id, string titulo, string? descripcion, string estado, DateTime creadoEn))cursoObj; // tuple fuertemente tipado
        <h1 class="page-title mb-2">@c.titulo</h1>
        <p class="text-muted">@c.descripcion</p>
        <p><strong>Estado:</strong> @c.estado</p>
        @if (TempData["Mensaje"] != null){<div class="alert alert-success">@TempData["Mensaje"]</div>}
        @if (TempData["Error"] != null){<div class="alert alert-danger">@TempData["Error"]</div>}

    <div class="mb-3">
        @if (User.IsInRole("Practicante"))
        {
            <form method="post" asp-action="SolicitarInscripcion" asp-controller="Cursos">
                @Html.AntiForgeryToken()
                <input type="hidden" name="idCurso" value="@c.id" />
                <button class="btn btn-primary">Solicitar Inscripción</button>
            </form>
        }
        @if (puedeEditar && (string)c.estado == "borrador")
        {
            <form method="post" asp-action="Publicar" asp-controller="Cursos" class="d-inline">
                @Html.AntiForgeryToken()
                <input type="hidden" name="idCurso" value="@c.id" />
                <button class="btn btn-success">Publicar Curso</button>
            </form>
        }
    </div>

        <!-- Tabs Contenido / Participantes -->
        <ul class="nav nav-tabs mb-3" id="cursoTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="tab-contenido" data-bs-toggle="tab" data-bs-target="#contenido" type="button" role="tab">Contenido del Curso</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="tab-participantes" data-bs-toggle="tab" data-bs-target="#participantes" type="button" role="tab">Lista de Participantes</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="tab-asistencias" data-bs-toggle="tab" data-bs-target="#asistencias" type="button" role="tab">Asistencias</button>
            </li>
        </ul>
        <div class="tab-content" id="cursoTabsContent">
            <!-- Contenido del Curso -->
            <div class="tab-pane fade show active" id="contenido" role="tabpanel">
                <div class="content-card mb-3">
                    <p><strong>Creado:</strong> @c.creadoEn.ToString("yyyy-MM-dd")</p>
                    <hr />
                    <h5>Sesiones</h5>
                    @{ var sesiones = (IEnumerable<(Guid sesionId, string titulo, int orden, List<(Guid id, string titulo, string tipo, string estado, int orden, DateTimeOffset? fechaLimite)> subsecciones)>)ViewBag.Sesiones ?? Enumerable.Empty<(Guid sesionId, string titulo, int orden, List<(Guid id, string titulo, string tipo, string estado, int orden, DateTimeOffset? fechaLimite)> subsecciones)>(); }
                    @if (!sesiones.Any())
                    {
                        <p class="text-muted">No hay sesiones creadas.</p>
                    }
                    else
                    {
                        <div class="accordion" id="accordionSesiones">
                            @foreach (var s in sesiones)
                            {
                                var headingId = $"heading_{s.sesionId}";
                                var collapseId = $"collapse_{s.sesionId}";
                                <div class="accordion-item">
                                    <h2 class="accordion-header d-flex align-items-center justify-content-between" id="@headingId">
                                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId">@s.orden - @s.titulo</button>
                                        @if (puedeEditar)
                                        {
                                            <form method="post" asp-action="EliminarSesion" asp-controller="Cursos" class="d-inline ms-2" onsubmit="return confirm('¿Eliminar sesión y sus subsecciones?');">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="idCurso" value="@c.id" />
                                                <input type="hidden" name="sesionId" value="@s.sesionId" />
                                                <button class="btn btn-sm btn-outline-danger">Eliminar</button>
                                            </form>
                                        }
                                    </h2>
                                    <div id="@collapseId" class="accordion-collapse collapse" data-bs-parent="#accordionSesiones">
                                        <div class="accordion-body">
                                            <h6>Subsecciones</h6>
                                            @if (!s.subsecciones.Any())
                                            {
                                                <p class="text-muted">No hay subsecciones.</p>
                                            }
                                            else
                                            {
                                                <table class="table table-sm">
                                                    <thead><tr><th>Título</th><th>Tipo</th><th>Estado</th><th>Acciones</th></tr></thead>
                                                    <tbody>
                                                        @foreach (var sub in s.subsecciones)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    <a href="@Url.Action("VerSubseccion","Cursos", new { idCurso = c.id, subseccionId = sub.id })" class="text-decoration-none">@sub.titulo</a>
                                                                </td>
                                                                <td>
                                                                    @sub.tipo
                                                                    @if (sub.tipo == "tarea" && sub.fechaLimite.HasValue)
                                                                    {
                                                                        var fl = sub.fechaLimite.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm");
                                                                        <span class="badge bg-warning text-dark ms-2">Vence @fl</span>
                                                                    }
                                                                </td>
                                                                <td>@sub.estado</td>
                                                                <td>
                                                                    @* Acceso rápido a revisión de entregas cuando es tarea *@
                                                                    @if (sub.tipo == "tarea")
                                                                    {
                                                                        <a class="btn btn-sm btn-outline-primary me-1" href="@Url.Action("RevisarTarea","Cursos", new { idCurso = c.id, subseccionId = sub.id })">Revisar entregas</a>
                                                                    }
                                                                    @if (puedeEditar)
                                                                    {
                                                                        <form method="post" asp-action="CambiarEstadoSubseccion" asp-controller="Cursos" class="d-inline">
                                                                            @Html.AntiForgeryToken()
                                                                            <input type="hidden" name="idCurso" value="@c.id" />
                                                                            <input type="hidden" name="subseccionId" value="@sub.id" />
                                                                            <input type="hidden" name="nuevoEstado" value="@(sub.estado == "publicado" ? "borrador" : "publicado")" />
                                                                            <button class="btn btn-sm @(sub.estado == "publicado" ? "btn-secondary" : "btn-success")">@(sub.estado == "publicado" ? "Borrador" : "Publicar")</button>
                                                                        </form>
                                                                        @* <!-- Editar subsección -->
                                                                        <button class="btn btn-sm btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#edit-sub-@sub.id">Editar</button>
                                                                        <div id="edit-sub-@sub.id" class="collapse mt-2">
                                                                            <form method="post" asp-action="EditarSubseccion" asp-controller="Cursos" class="row g-2">
                                                                                @Html.AntiForgeryToken()
                                                                                <input type="hidden" name="idCurso" value="@c.id" />
                                                                                <input type="hidden" name="subseccionId" value="@sub.id" />
                                                                                <div class="col-md-3">
                                                                                    <input name="titulo" class="form-control form-control-sm" placeholder="Título" value="@sub.titulo" />
                                                                                </div>
                                                                                <div class="col-md-2">
                                                                                    <select name="tipo" class="form-select form-select-sm">
                                                                                        <option value="contenido">Contenido</option>
                                                                                        <option value="video">Video</option>
                                                                                        <option value="tarea">Tarea</option>
                                                                                    </select>
                                                                                </div>
                                                                                <div class="col-md-4">
                                                                                    <input name="textoContenido" class="form-control form-control-sm" placeholder="Texto / Instrucciones" />
                                                                                </div>
                                                                                <div class="col-md-2">
                                                                                    <input type="number" name="maxPuntaje" class="form-control form-control-sm" placeholder="Puntaje (tarea)" min="0" max="20" />
                                                                                </div>
                                                                                <div class="col-md-1">
                                                                                    <input type="number" name="orden" class="form-control form-control-sm" placeholder="Orden" min="1" />
                                                                                </div>
                                                                                <div class="col-md-12 text-end">
                                                                                    <button class="btn btn-primary btn-sm">Guardar</button>
                                                                                </div>
                                                                            </form>
                                                                        </div> *@
                                                                        <!-- Eliminar subsección -->
                                                                        <form method="post" asp-action="EliminarSubseccion" asp-controller="Cursos" class="d-inline ms-1" onsubmit="return confirm('¿Eliminar esta subsección?');">
                                                                            @Html.AntiForgeryToken()
                                                                            <input type="hidden" name="idCurso" value="@c.id" />
                                                                            <input type="hidden" name="subseccionId" value="@sub.id" />
                                                                            <button class="btn btn-sm btn-outline-danger">Eliminar</button>
                                                                        </form>
                                                                    }
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            }
                                            @if (puedeEditar)
                                            {
                                                <hr />
                                                <h6>Nueva subsección</h6>
                                                <div class="d-flex gap-2 flex-wrap">
                                                    <form method="post" asp-action="CrearSubseccionRapida" asp-controller="Cursos" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="idCurso" value="@c.id" />
                                                        <input type="hidden" name="sesionId" value="@s.sesionId" />
                                                        <input type="hidden" name="tipo" value="contenido" />
                                                        <button class="btn btn-outline-primary">
                                                            Nuevo Contenido
                                                        </button>
                                                    </form>
                                                    <form method="post" asp-action="CrearSubseccionRapida" asp-controller="Cursos" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="idCurso" value="@c.id" />
                                                        <input type="hidden" name="sesionId" value="@s.sesionId" />
                                                        <input type="hidden" name="tipo" value="video" />
                                                        <button class="btn btn-outline-danger">
                                                            Nuevo Video
                                                        </button>
                                                    </form>
                                                    <form method="post" asp-action="CrearSubseccionRapida" asp-controller="Cursos" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="idCurso" value="@c.id" />
                                                        <input type="hidden" name="sesionId" value="@s.sesionId" />
                                                        <input type="hidden" name="tipo" value="tarea" />
                                                        <button class="btn btn-outline-secondary">
                                                            Nueva Tarea
                                                        </button>
                                                    </form>
                                                </div>
                                                <p class="text-muted mt-2">Se crea automáticamente al final, con título por defecto. Edita luego dentro de la subsección.</p>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    @if (puedeEditar)
                    {
                        <hr />
                        <h6>Gestionar sesiones</h6>
                        <!-- Crear nueva sesión -->
                        <h6 class="mt-2">Nueva sesión</h6>
                        <form method="post" asp-action="CrearSesionRapida" asp-controller="Cursos" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="idCurso" value="@c.id" />
                            <button class="btn btn-primary btn-sm">Agregar sesión</button>
                        </form>
                        <form method="post" asp-action="CrearSesionesIniciales" asp-controller="Cursos" class="d-inline ms-2" onsubmit="return confirm('¿Crear 14 sesiones por defecto?');">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="idCurso" value="@c.id" />
                            <button class="btn btn-outline-primary btn-sm">Crear 14 sesiones</button>
                        </form>
                    }
                </div>
            </div>
            <!-- Lista de Participantes -->
            <div class="tab-pane fade" id="participantes" role="tabpanel">
                <div class="content-card mb-3">
                    <h5>Participantes</h5>
                    @{ var participantes = (IEnumerable<(Guid id, string nombres, string correo, string rol)>)ViewBag.Participantes ?? Enumerable.Empty<(Guid id, string nombres, string correo, string rol)>(); }
                    @if (!participantes.Any())
                    {
                        <p class="text-muted">No hay participantes registrados.</p>
                    }
                    else
                    {
                        <table class="table table-sm">
                            <thead><tr><th>Nombres</th><th>Correo</th><th>Rol</th></tr></thead>
                            <tbody>
                                @foreach (var part in participantes.OrderBy(p=>p.rol).ThenBy(p=>p.nombres))
                                {
                                    <tr>
                                        <td>@part.nombres</td>
                                        <td>@part.correo</td>
                                        <td>@part.rol</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
                
            </div>

            <!-- Asistencias -->
            <div class="tab-pane fade" id="asistencias" role="tabpanel">
                <div class="content-card mb-3">
                    <h5>Asistencias del Curso</h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="card card-body">
                                <h6 class="mb-2">Horario configurado</h6>
                                @{ var horario = (IEnumerable<(string dia, TimeSpan inicio, TimeSpan fin)>)ViewBag.Horario ?? Enumerable.Empty<(string dia, TimeSpan inicio, TimeSpan fin)>(); }
                                @if (!horario.Any())
                                {
                                    <p class="text-muted">No hay horario configurado para este curso.</p>
                                    @if (puedeEditar)
                                    {
                                        <a class="btn btn-outline-primary btn-sm" href="@Url.Action("Configurar","Asistencias", new { idCurso = c.id })">Configurar horario</a>
                                    }
                                }
                                else
                                {
                                    <ul class="list-unstyled mb-2">
                                        @foreach (var h in horario.OrderBy(x=>x.dia))
                                        {
                                            <li><span class="badge bg-secondary text-light text-capitalize">@h.dia</span> @h.inicio.ToString("hh\\:mm") - @h.fin.ToString("hh\\:mm")</li>
                                        }
                                    </ul>
                                    @if (puedeEditar)
                                    {
                                        <a class="btn btn-outline-secondary btn-sm" href="@Url.Action("Configurar","Asistencias", new { idCurso = c.id })">Editar horario</a>
                                    }
                                }
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card card-body">
                                <h6 class="mb-2">Crear nueva asistencia</h6>
                                <form method="post" asp-controller="Asistencias" asp-action="Crear">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="idCurso" value="@c.id" />
                                    <div class="row g-2 align-items-end">
                                        <div class="col-md-6">
                                            <label class="form-label">Fecha</label>
                                            <input type="date" class="form-control" name="fecha" required />
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Día del horario</label>
                                            <select name="dia" class="form-select" required>
                                                @foreach (var h in horario)
                                                {
                                                    <option value="@h.dia">@h.dia</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="col-12 text-end">
                                            <button class="btn btn-primary btn-sm" type="submit">Crear asistencia</button>
                                        </div>
                                    </div>
                                    <p class="text-muted mt-2">Solo podrás crear asistencias en días permitidos; la fecha no puede repetirse.</p>
                                </form>
                            </div>
                        </div>
                    </div>

                    <hr />
                    <h6 class="mb-2">Asistencias creadas</h6>
                    @{ var asistencias = (IEnumerable<(Guid id, DateTime fecha, string dia)>)ViewBag.Asistencias ?? Enumerable.Empty<(Guid id, DateTime fecha, string dia)>(); }
                    @if (!asistencias.Any())
                    {
                        <p class="text-muted">Aún no hay asistencias para este curso.</p>
                    }
                    else
                    {
                        <table class="table table-sm">
                            <thead><tr><th>Fecha</th><th>Día</th><th>Acciones</th></tr></thead>
                            <tbody>
                                @foreach (var a in asistencias.OrderByDescending(x=>x.fecha))
                                {
                                    <tr>
                                        <td>@a.fecha.ToString("yyyy-MM-dd")</td>
                                        <td class="text-capitalize">@a.dia</td>
                                        <td>
                                            <a class="btn btn-outline-primary btn-sm" href="@Url.Action("Tomar","Asistencias", new { asistenciaId = a.id, idCurso = c.id })">Tomar asistencia</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>

        <script>
            (function(){
                function attachSearch(){
                    const input = document.getElementById('buscarProfesor');
                    if(!input) return;
                    input.addEventListener('keyup', function(){
                        const term = this.value.toLowerCase();
                        document.querySelectorAll('#tablaDisponibles tbody tr').forEach(tr => {
                            const nombre = tr.querySelector('.col-nombre')?.textContent?.toLowerCase() || '';
                            tr.style.display = nombre.includes(term) ? '' : 'none';
                        });
                    });
                }
                attachSearch();

                // Simplified creation uses quick buttons; no toggle needed
            })();
        </script>

        <div class="mt-3">
            <a class="btn btn-secondary" href="@Url.Action("MisCursos","Cursos")">Volver a Mis Cursos</a>
        </div>
    }
</div>