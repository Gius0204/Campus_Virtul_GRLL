@model dynamic
@{
    ViewData["Title"] = "Detalle del Curso";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    object? cursoObj = ViewBag.Curso;
    bool cursoDisponible = cursoObj != null;
    bool puedeEditar = (bool)(ViewBag.PuedeEditar ?? false);
}
<div class="container-fluid">
    @if (!cursoDisponible)
    {
        <div class="alert alert-danger">No se encontró el curso.</div>
        <div class="mt-3">
            <a class="btn btn-secondary" href="@Url.Action("Index","Cursos")">Volver al Catálogo</a>
        </div>
    }
    else
    {
        var c = ((Guid id, string titulo, string? descripcion, string estado, DateTime creadoEn))cursoObj; // tuple fuertemente tipado
        <h1 class="page-title mb-2">@c.titulo</h1>
        <p class="text-muted">@c.descripcion</p>
        <p><strong>Estado:</strong> @c.estado</p>
        @if (TempData["Mensaje"] != null){<div class="alert alert-success">@TempData["Mensaje"]</div>}
        @if (TempData["Error"] != null){<div class="alert alert-danger">@TempData["Error"]</div>}

    <div class="mb-3">
        @if (User.IsInRole("Practicante"))
        {
            <form method="post" asp-action="SolicitarInscripcion" asp-controller="Cursos">
                @Html.AntiForgeryToken()
                <input type="hidden" name="idCurso" value="@c.id" />
                <button class="btn btn-primary">Solicitar Inscripción</button>
            </form>
        }
        @if (puedeEditar && (string)c.estado == "borrador")
        {
            <form method="post" asp-action="Publicar" asp-controller="Cursos" class="d-inline">
                @Html.AntiForgeryToken()
                <input type="hidden" name="idCurso" value="@c.id" />
                <button class="btn btn-success">Publicar Curso</button>
            </form>
        }
    </div>

        <!-- Tabs Contenido / Participantes -->
        <ul class="nav nav-tabs mb-3" id="cursoTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="tab-contenido" data-bs-toggle="tab" data-bs-target="#contenido" type="button" role="tab">Contenido del Curso</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="tab-participantes" data-bs-toggle="tab" data-bs-target="#participantes" type="button" role="tab">Lista de Participantes</button>
            </li>
        </ul>
        <div class="tab-content" id="cursoTabsContent">
            <!-- Contenido del Curso -->
            <div class="tab-pane fade show active" id="contenido" role="tabpanel">
                <div class="content-card mb-3">
                    <p><strong>Creado:</strong> @c.creadoEn.ToString("yyyy-MM-dd")</p>
                    <hr />
                    <h5>Sesiones</h5>
                    @{ var sesiones = (IEnumerable<(Guid sesionId, string titulo, int orden, List<(Guid id, string titulo, string tipo, string estado, int orden)> subsecciones)>)ViewBag.Sesiones ?? Enumerable.Empty<(Guid sesionId, string titulo, int orden, List<(Guid id, string titulo, string tipo, string estado, int orden)> subsecciones)>(); }
                    @if (!sesiones.Any())
                    {
                        <p class="text-muted">No hay sesiones creadas.</p>
                    }
                    else
                    {
                        <div class="accordion" id="accordionSesiones">
                            @foreach (var s in sesiones)
                            {
                                var headingId = $"heading_{s.sesionId}";
                                var collapseId = $"collapse_{s.sesionId}";
                                <div class="accordion-item">
                                    <h2 class="accordion-header" id="@headingId">
                                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId">@s.orden - @s.titulo</button>
                                    </h2>
                                    <div id="@collapseId" class="accordion-collapse collapse" data-bs-parent="#accordionSesiones">
                                        <div class="accordion-body">
                                            <h6>Subsecciones</h6>
                                            @if (!s.subsecciones.Any())
                                            {
                                                <p class="text-muted">No hay subsecciones.</p>
                                            }
                                            else
                                            {
                                                <table class="table table-sm">
                                                    <thead><tr><th>Título</th><th>Tipo</th><th>Estado</th><th>Acciones</th></tr></thead>
                                                    <tbody>
                                                        @foreach (var sub in s.subsecciones)
                                                        {
                                                            <tr>
                                                                <td>@sub.titulo</td>
                                                                <td>@sub.tipo</td>
                                                                <td>@sub.estado</td>
                                                                <td>
                                                                    @if (puedeEditar)
                                                                    {
                                                                        <form method="post" asp-action="CambiarEstadoSubseccion" asp-controller="Cursos" class="d-inline">
                                                                            @Html.AntiForgeryToken()
                                                                            <input type="hidden" name="idCurso" value="@c.id" />
                                                                            <input type="hidden" name="subseccionId" value="@sub.id" />
                                                                            <input type="hidden" name="nuevoEstado" value="@(sub.estado == "publicado" ? "borrador" : "publicado")" />
                                                                            <button class="btn btn-sm @(sub.estado == "publicado" ? "btn-secondary" : "btn-success")">@(sub.estado == "publicado" ? "Borrador" : "Publicar")</button>
                                                                        </form>
                                                                    }
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            }
                                            @if (puedeEditar)
                                            {
                                                <hr />
                                                <h6>Nueva subsección</h6>
                                                <form method="post" asp-action="CrearSubseccion" asp-controller="Cursos" enctype="multipart/form-data" class="row g-2">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="idCurso" value="@c.id" />
                                                    <input type="hidden" name="sesionId" value="@s.sesionId" />
                                                    <div class="col-md-4">
                                                        <input name="titulo" class="form-control form-control-sm" placeholder="Título" required />
                                                    </div>
                                                    <div class="col-md-3">
                                                        <select name="tipo" class="form-select form-select-sm">
                                                            <option value="contenido">Contenido</option>
                                                            <option value="video">Video</option>
                                                            <option value="tarea">Tarea</option>
                                                        </select>
                                                    </div>
                                                    <div class="col-md-5">
                                                        <input name="textoContenido" class="form-control form-control-sm" placeholder="Texto / Instrucciones (opcional)" />
                                                    </div>
                                                    <div class="col-md-4">
                                                        <input type="file" name="archivo" class="form-control form-control-sm" />
                                                    </div>
                                                    <div class="col-md-4">
                                                        <input type="file" name="video" accept="video/*" class="form-control form-control-sm" />
                                                    </div>
                                                    <div class="col-md-2">
                                                        <input type="number" name="maxPuntaje" class="form-control form-control-sm" placeholder="Puntaje (tarea)" min="0" max="20" />
                                                    </div>
                                                    <div class="col-md-2 text-end">
                                                        <button class="btn btn-primary btn-sm">Agregar</button>
                                                    </div>
                                                </form>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    @if (puedeEditar)
                    {
                        <hr />
                        <h6>Nueva sesión</h6>
                        <form method="post" asp-action="CrearSesion" asp-controller="Cursos" class="row g-2">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="idCurso" value="@c.id" />
                            <div class="col-md-6">
                                <input name="titulo" class="form-control form-control-sm" placeholder="Título sesión" required />
                            </div>
                            <div class="col-md-3">
                                <input type="number" name="orden" class="form-control form-control-sm" placeholder="Orden" min="1" />
                            </div>
                            <div class="col-md-3 text-end">
                                <button class="btn btn-success btn-sm">Crear sesión</button>
                            </div>
                        </form>
                    }
                </div>
            </div>
            <!-- Lista de Participantes -->
            <div class="tab-pane fade" id="participantes" role="tabpanel">
                <div class="content-card mb-3">
                    <h5>Participantes</h5>
                    @{ var participantes = (IEnumerable<(Guid id, string nombres, string correo, string rol)>)ViewBag.Participantes ?? Enumerable.Empty<(Guid id, string nombres, string correo, string rol)>(); }
                    @if (!participantes.Any())
                    {
                        <p class="text-muted">No hay participantes registrados.</p>
                    }
                    else
                    {
                        <table class="table table-sm">
                            <thead><tr><th>Nombres</th><th>Correo</th><th>Rol</th></tr></thead>
                            <tbody>
                                @foreach (var part in participantes.OrderBy(p=>p.rol).ThenBy(p=>p.nombres))
                                {
                                    <tr>
                                        <td>@part.nombres</td>
                                        <td>@part.correo</td>
                                        <td>@part.rol</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
                
            </div>
        </div>

        <script>
            (function(){
                function attachSearch(){
                    const input = document.getElementById('buscarProfesor');
                    if(!input) return;
                    input.addEventListener('keyup', function(){
                        const term = this.value.toLowerCase();
                        document.querySelectorAll('#tablaDisponibles tbody tr').forEach(tr => {
                            const nombre = tr.querySelector('.col-nombre')?.textContent?.toLowerCase() || '';
                            tr.style.display = nombre.includes(term) ? '' : 'none';
                        });
                    });
                }
                attachSearch();
            })();
        </script>

        <div class="mt-3">
            <a class="btn btn-secondary" href="@Url.Action("MisCursos","Cursos")">Volver a Mis Cursos</a>
        </div>
    }
</div>