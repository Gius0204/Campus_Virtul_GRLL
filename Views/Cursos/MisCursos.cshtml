@model dynamic
@{
    ViewData["Title"] = "Mis Cursos";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<div class="container-fluid">
    <h1 class="page-title mb-3">Mis Cursos</h1>
    @{ var cursos = (ViewBag.Cursos as IEnumerable<(Guid id, string titulo, string descripcion, string estado, Guid? profesorId, DateTime creadoEn)>) ?? Enumerable.Empty<(Guid id, string titulo, string descripcion, string estado, Guid? profesorId, DateTime creadoEn)>(); }
    @if (!cursos.Any())
    {
        <div class="alert alert-info">No tienes cursos a√∫n.</div>
    }
    <div class="row">
        @foreach (var c in cursos)
        {
            <div class="col-md-4 mb-3">
                <div class="content-card h-100">
                    <h5>@c.titulo</h5>
                    <p class="text-muted">@c.descripcion</p>
                    <p><strong>Estado:</strong> @c.estado</p>
                    <a class="btn btn-sm btn-primary" href="@Url.Action("Detalle","Cursos", new { id = c.id })">Entrar</a>
                </div>
            </div>
        }
    </div>
</div>