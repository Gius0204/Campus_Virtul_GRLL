@model dynamic
@{
    ViewData["Title"] = "Mis Cursos";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<div class="container-fluid">
    <h1 class="page-title mb-3">Mis Cursos</h1>
    @{ var cursos = (ViewBag.Cursos as IEnumerable<(Guid id, string titulo, string? descripcion, string estado, DateTime creadoEn)>) ?? Enumerable.Empty<(Guid id, string titulo, string? descripcion, string estado, DateTime creadoEn)>(); }
    @if (!cursos.Any())
    {
        <div class="alert alert-info">No tienes cursos a√∫n.</div>
    }
    <div class="row">
        @foreach (var c in cursos)
        {
            <div class="col-md-4 mb-3">
                <div class="content-card h-100">
                    <h5>@c.titulo</h5>
                    <p class="text-muted">@(string.IsNullOrWhiteSpace(c.descripcion) ? "-" : c.descripcion)</p>
                    <p><strong>Estado:</strong> @c.estado</p>
                    <a class="btn btn-sm btn-primary" href="@Url.Action("DetalleProfesor","Cursos", new { id = c.id })">Ver</a>
                    <form method="post" asp-action="@(c.estado == "publicado" ? "Borrador" : "Publicar")" asp-controller="Cursos" class="d-inline ms-1">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="idCurso" value="@c.id" />
                        <button type="submit" class="btn btn-sm @(c.estado == "publicado" ? "btn-secondary" : "btn-success")">
                            @(c.estado == "publicado" ? "Borrador" : "Publicar")
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>