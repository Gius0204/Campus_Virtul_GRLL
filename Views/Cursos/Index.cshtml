@model dynamic
@{
    ViewData["Title"] = "Catálogo de Cursos";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    var rol = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "";
}
<div class="container-fluid">
    <h1 class="page-title mb-3">Catálogo de Cursos</h1>
    @if (TempData["Mensaje"] != null){<div class="alert alert-success">@TempData["Mensaje"]</div>}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div></div>
        @if (rol == "Administrador")
        {
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#crearCursoCatModal">➕ Nuevo Curso</button>
        }
    </div>
    <div class="row">
        @{ var cursos = (ViewBag.Cursos as IEnumerable<(Guid id, string titulo, string? descripcion, string estado, DateTime creadoEn)>) ?? Enumerable.Empty<(Guid id, string titulo, string? descripcion, string estado, DateTime creadoEn)>(); }
        @if (!cursos.Any())
        {
            <div class="col-12"><div class="alert alert-info">No hay cursos registrados.</div></div>
        }
        else
        {
            foreach (var c in cursos)
            {
                <div class="col-md-4 mb-3">
                    <div class="content-card h-100">
                        <h5>@c.titulo</h5>
                        <p class="text-muted">@(string.IsNullOrWhiteSpace(c.descripcion)? "Sin descripción" : c.descripcion)</p>
                        <p><strong>Estado:</strong> @c.estado</p>
                        <a class="btn btn-sm btn-primary" href="@Url.Action("DetalleAdministrador","Cursos", new { id = c.id })">Ver Detalle</a>
                    </div>
                </div>
            }
        }
    </div>
</div>

<!-- Modal Crear Curso Catálogo -->
<div class="modal fade" id="crearCursoCatModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nuevo Curso</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="CrearDesdeCatalogo" asp-controller="Cursos" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label class="form-label">Título</label>
                        <input type="text" name="titulo" class="form-control" required maxlength="120" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Descripción</label>
                        <textarea name="descripcion" class="form-control" rows="3" maxlength="500"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Estado inicial</label>
                        <select name="estado" class="form-select" required>
                            <option value="borrador" selected>Borrador</option>
                            <option value="publicado">Publicado</option>
                        </select>
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">Crear</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>