@model IEnumerable<Campus_Virtul_GRLL.Models.ViewModels.InscripcionPendienteVm>
@{
    ViewData["Title"] = "Inscripciones Pendientes";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<div class="container-fluid">
    <h1 class="page-title mb-3">Inscripciones Pendientes</h1>
    @if (TempData["Mensaje"] != null){<div class="alert alert-success">@TempData["Mensaje"]</div>}
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">No hay solicitudes pendientes.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Curso</th>
                        <th>Practicante</th>
                        <th>Correo</th>
                        <th>Fecha</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var i in Model)
                {
                    <tr>
                        <td>@i.CursoTitulo</td>
                        <td>@i.PracticanteNombre</td>
                        <td>@i.PracticanteCorreo</td>
                        <td>@i.CreadaEn.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <form method="post" asp-action="Aprobar" asp-controller="Inscripciones" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@i.SolicitudId" />
                                <button class="btn btn-sm btn-success">Aprobar</button>
                            </form>
                            <form method="post" asp-action="Rechazar" asp-controller="Inscripciones" class="d-inline ms-1">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@i.SolicitudId" />
                                <button class="btn btn-sm btn-danger">Rechazar</button>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
 </div>
